<Window x:Class="db_course.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:db_course"
        mc:Ignorable="d"
        Title="Login" Height="261" Width="472">
    <Grid>
        <Button Content="登录" HorizontalAlignment="Left" Height="29" Margin="84,185,0,0" VerticalAlignment="Top" Width="91" Click="Login_Click" IsDefault="True"/>
        <Button Content="关闭" HorizontalAlignment="Left" Height="29" Margin="289,185,0,0" VerticalAlignment="Top" Width="91" Click="Close_Click"/>
        <TextBox x:Name="tbUser" HorizontalAlignment="Left" Height="29" Margin="121,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" AllowDrop="False"/>
        <Label Content="用户名" HorizontalAlignment="Left" Margin="26,25,0,0" VerticalAlignment="Top" Width="62"/>
        <Label Content="密码" HorizontalAlignment="Left" Margin="26,70,0,0" VerticalAlignment="Top" Width="62"/>
        <PasswordBox x:Name="tbPassword" HorizontalAlignment="Left" Margin="121,70,0,0" VerticalAlignment="Top" Width="300" Height="29"/>
        <Label Content="{Binding Result}" HorizontalAlignment="Left" Margin="26,124,0,0" VerticalAlignment="Top" Width="395" HorizontalContentAlignment="Center" Height="29"/>

    </Grid>
</Window>
